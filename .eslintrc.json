{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "react"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",  // Allows not importing React in JSX files explicitly.
    "no-unused-vars": "off",            // Disables eslint from catching variable names used in interfaces when using TypeScript.
    "@typescript-eslint/no-unused-vars": "warn",  // Instead, the @typescript/eslint plugin will emit a warning for unused variables in TypeScript.
    "@typescript-eslint/no-explicit-any": "warn"  // Any type definition is recognized as an error.
  }      
}
